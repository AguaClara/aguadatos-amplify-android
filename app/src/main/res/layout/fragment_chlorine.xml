<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_blue"
        android:layout_marginBottom="55dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/chlorine_page_header"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/chemical_type_text">

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/back_button"
                android:textColor="@color/black"
                android:textSize="40sp" />

        <TextView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="@string/chlorine_dosage_title"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:paddingVertical="20dp"
                />
    </LinearLayout>

    <TextView
            android:id="@+id/chemical_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chemical_type_pac"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/chlorine_page_header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/form_box"
            android:paddingHorizontal="30dp"
            android:paddingBottom="10dp" />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/form_box"
            android:layout_width="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/coag_form_background"
            app:layout_constraintTop_toBottomOf="@id/chemical_type_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tank_switch"
            app:layout_constraintHeight_default="spread">
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/calibration_nav_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/calibration"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:background="@drawable/calib_primary_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/change_dose_nav_button"
                app:layout_constraintBottom_toTopOf="@id/fragmentContainer" />
        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_dose_nav_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:text="@string/change_dose"
                android:textColor="@color/black"
                android:background="@drawable/change_dose_secondary_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/calibration_nav_button"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/fragmentContainer" />
        <View
                android:id="@+id/horiz_line_calibration"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="1dp"
                android:background="@color/background_blue"
                app:layout_constraintBottom_toBottomOf="@id/calibration_nav_button"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <View
                android:id="@+id/horiz_line_change_dose"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.6"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                app:layout_constraintBottom_toBottomOf="@id/calibration_nav_button"
                app:layout_constraintRight_toRightOf="parent"/>
        <View
                android:id="@+id/vert_line"
                android:layout_width="1dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.9"
                android:background="@color/light_gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        <FrameLayout
                android:id="@+id/fragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/calibration_nav_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
            android:id="@+id/active_tank_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/active_tank"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/form_box"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vol_tank1_text" />
    <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tank_switch"
            android:textOn="@string/_2"
            android:textOff="@string/_1"
            android:textStyle="bold"
            app:showText="true"
            app:track="@drawable/green_button_background"
            android:thumb="@drawable/switch_thumb_1"
            android:textColor="@color/black"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/form_box"
            app:layout_constraintLeft_toRightOf="@id/active_tank_text"
            app:layout_constraintBottom_toTopOf="@id/vol_tank1_text" />
    <TextView
            android:id="@+id/vol_tank1_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/volume_of_tank_1"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/active_tank_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vol_tank1_input"
            app:layout_constraintBottom_toTopOf="@id/vol_tank2_text" />
    <EditText
            android:id="@+id/vol_tank1_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:hint="@string/space"
            android:textColor="@color/black"
            android:inputType="numberDecimal"
            android:paddingHorizontal="10dp"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/active_tank_text"
            app:layout_constraintLeft_toRightOf="@id/vol_tank1_text"
            app:layout_constraintRight_toLeftOf="@id/l1"
            app:layout_constraintBottom_toTopOf="@id/vol_tank2_text" />
    <TextView
            android:id="@+id/l1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/l"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/active_tank_text"
            app:layout_constraintLeft_toRightOf="@id/vol_tank1_input"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/vol_tank2_text" />
    <TextView
            android:id="@+id/vol_tank2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="@string/volume_of_tank_2"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/vol_tank1_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/vol_tank2_input"
            app:layout_constraintBottom_toTopOf="@id/tank_run_out_message" />
    <EditText
            android:id="@+id/vol_tank2_input"
            android:layout_width="0dp"
            android:autofillHints=""
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/space"
            android:paddingHorizontal="10dp"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/vol_tank1_text"
            app:layout_constraintLeft_toRightOf="@id/vol_tank2_text"
            app:layout_constraintRight_toLeftOf="@id/l2"
            app:layout_constraintBottom_toTopOf="@id/tank_run_out_message" />
    <TextView
            android:id="@+id/l2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/l"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/vol_tank1_text"
            app:layout_constraintLeft_toRightOf="@id/vol_tank2_input"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tank_run_out_message" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tank_run_out_message"
            android:textStyle="italic"
            android:textColor="@color/red"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/vol_tank2_input"
            app:layout_constraintBottom_toTopOf="@id/submit_button"
            app:layout_constraintLeft_toLeftOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/submit"
            style="@style/GreenButtonStyle"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/tank_run_out_message"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>