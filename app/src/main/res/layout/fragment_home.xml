<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_blue"
        android:layout_marginBottom="55dp"
        tools:context=".HomeFragment">

    <!-- Header -->
    <LinearLayout
            android:id="@+id/home_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <ImageView
                android:id="@+id/logo_pic"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/aguadatos_label"
                android:src="@drawable/black_logo" />
    </LinearLayout>
    <!-- Navigation Buttons -->
    <GridLayout
            android:id="@+id/navigation_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_gravity="center"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/home_header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/plantFlowNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_green"
                android:text="@string/plant_flow"
                android:textColor="@android:color/black" />

        <Button
                android:id="@+id/rawWaterNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_green"
                android:text="@string/raw_water_caps"
                android:textColor="@android:color/black" />

        <Button
                android:id="@+id/coagNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_green"
                android:text="@string/coagulant_dosage"
                android:textColor="@android:color/black" />

        <Button
                android:id="@+id/filteredTurbNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_green"
                android:text="@string/filtered_water_turbidity"
                android:textColor="@android:color/black" />

        <Button
                android:id="@+id/clarifiedTurbNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_green"
                android:text="@string/clarified_water_turbidity"
                android:textColor="@android:color/black" />

        <Button
                android:id="@+id/chlorineNavButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_green"
                android:text="@string/chlorine_dosage"
                android:textColor="@android:color/black" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>