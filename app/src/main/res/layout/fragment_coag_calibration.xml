<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coagulant_form_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/slider_position_text"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:text="@string/slider_position"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/slider_input"
        app:layout_constraintBottom_toTopOf="@id/slider_seek_bar" />
    <EditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/slider_input"
        android:autofillHints=""
        android:hint="@string/space"
        android:gravity="end"
        android:text="@string/_50"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:inputType="number"
        android:textStyle="bold"
        android:paddingHorizontal="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/slider_position_text"
        app:layout_constraintRight_toLeftOf="@id/percent_text"
        app:layout_constraintBottom_toTopOf="@id/slider_seek_bar" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/percent_text"
        android:text="@string/percent"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/slider_input"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/slider_seek_bar" />
        <SeekBar
            android:id="@+id/slider_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_progress_background"
            app:layout_constraintTop_toBottomOf="@id/slider_position_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slider_labels_0" />
        <TextView
            android:id="@+id/slider_labels_0"
            android:layout_width="0dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/water_inflow_rate_text" />
        <TextView
            android:id="@+id/slider_labels_100"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/_100"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/water_inflow_rate_text" />
        <TextView
            android:id="@+id/water_inflow_rate_text"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:text="@string/water_inflow_rate"
            app:layout_constraintTop_toBottomOf="@id/slider_labels_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/water_inflow_rate_input" />
        <EditText
            android:id="@+id/water_inflow_rate_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:autofillHints=""
            android:inputType="numberDecimal"
            android:layout_marginHorizontal="15dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/water_inflow_rate_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ls_text"
            app:layout_constraintBottom_toTopOf="@id/start_volume_text" />
        <TextView
            android:id="@+id/ls_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/l_s"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/water_inflow_rate_text"
            app:layout_constraintLeft_toRightOf="@id/water_inflow_rate_input"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/start_volume_text" />
        <TextView
            android:id="@+id/start_volume_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_volume"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/water_inflow_rate_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/end_volume_text"
            app:layout_constraintBottom_toTopOf="@id/start_volume_input" />
        <TextView
            android:id="@+id/end_volume_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/end_volume"
            android:textStyle="bold"
            android:textColor="@color/seekbar_gray"
            app:layout_constraintTop_toBottomOf="@id/water_inflow_rate_input"
            app:layout_constraintLeft_toRightOf="@id/start_volume_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/start_volume_input" />
        <EditText
            android:id="@+id/start_volume_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:autofillHints=""
            android:contentDescription="@string/enter_start_volume"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/start_volume_text"
            app:layout_constraintBottom_toTopOf="@id/time_elapsed_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sv_ml_text" />
        <TextView
            android:id="@+id/sv_ml_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ml"
            android:layout_marginStart="6dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/start_volume_input"
            app:layout_constraintTop_toBottomOf="@id/start_volume_text"
            app:layout_constraintRight_toLeftOf="@id/end_volume_input"
            app:layout_constraintBottom_toTopOf="@id/time_elapsed_text" />
        <EditText
            android:id="@+id/end_volume_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:contentDescription="@string/enter_end_volume"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/start_volume_text"
            app:layout_constraintBottom_toTopOf="@id/time_elapsed_text"
            app:layout_constraintLeft_toRightOf="@id/sv_ml_text"
            app:layout_constraintRight_toLeftOf="@id/ev_ml_text"/>
        <TextView
            android:id="@+id/ev_ml_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ml"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            android:textColor="@color/seekbar_gray"
            app:layout_constraintLeft_toRightOf="@id/end_volume_input"
            app:layout_constraintTop_toBottomOf="@id/start_volume_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time_elapsed_text" />
        <TextView
            android:id="@+id/time_elapsed_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/time_elapsed"
            android:textStyle="bold"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="1dp"
            app:layout_constraintTop_toBottomOf="@id/start_volume_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/timer_minutes" />
    <EditText
        android:id="@+id/timer_minutes"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:autofillHints=""
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginStart="15dp"
        android:hint="@string/_00"
        android:inputType="number"
        android:textColor="@color/black"
        android:background="@drawable/rounded_white2"
        app:layout_constraintTop_toBottomOf="@id/time_elapsed_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/timer_separator_text"
        app:layout_constraintBottom_toTopOf="@id/line_separator" />
    <TextView
        android:id="@+id/timer_separator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="@string/colon"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/time_elapsed_text"
        app:layout_constraintLeft_toRightOf="@id/timer_minutes"
        app:layout_constraintRight_toLeftOf="@id/timer_seconds"
        app:layout_constraintBottom_toTopOf="@id/line_separator" />
    <EditText
        android:id="@+id/timer_seconds"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:autofillHints=""
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/black"
        android:hint="@string/_00"
        android:inputType="number"
        android:background="@drawable/rounded_white2"
        app:layout_constraintTop_toBottomOf="@id/time_elapsed_text"
        app:layout_constraintLeft_toRightOf="@id/timer_separator_text"
        app:layout_constraintRight_toLeftOf="@id/play_button"
        app:layout_constraintBottom_toTopOf="@id/line_separator" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/play_button"
        android:background="@drawable/play_button"
        android:contentDescription="@string/timer_start"
        app:layout_constraintTop_toBottomOf="@id/time_elapsed_text"
        app:layout_constraintLeft_toRightOf="@id/timer_seconds"
        app:layout_constraintRight_toLeftOf="@id/reset_button"
        app:layout_constraintBottom_toTopOf="@id/line_separator" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/reset_button"
        android:background="@drawable/gray_reset_button"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/reset_timer"
        app:layout_constraintTop_toBottomOf="@id/time_elapsed_text"
        app:layout_constraintLeft_toRightOf="@id/play_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_separator" />
    <View
        android:id="@+id/line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/timer_minutes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/output_text"/>
    <TextView
        android:id="@+id/output_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/output"
        android:textColor="@color/black"
        android:layout_marginHorizontal="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/line_separator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chem_dose_text" />
    <View
        android:id="@+id/output_underline"
        android:layout_width="65dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/output_text"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/chem_dose_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/coagulant_dosage_colon"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/output_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/chem_dose_display"
        app:layout_constraintBottom_toTopOf="@id/chem_flow_text" />
    <TextView
        android:id="@+id/chem_dose_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginVertical="5dp"
        android:textColor="@color/black"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/output_text"
        app:layout_constraintLeft_toRightOf="@id/chem_dose_text"
        app:layout_constraintRight_toLeftOf="@id/cd_mgL_text"
        app:layout_constraintBottom_toTopOf="@id/chem_flow_text" />
    <TextView
        android:id="@+id/cd_mgL_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/mg_l"
        android:layout_marginHorizontal="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/output_text"
        app:layout_constraintLeft_toRightOf="@id/chem_dose_display"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chem_flow_text" />
    <TextView
        android:id="@+id/chem_flow_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/black"
        android:text="@string/coagulant_flow_rate"
        app:layout_constraintTop_toBottomOf="@id/chem_dose_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/chem_flow_display"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/chem_flow_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginVertical="5dp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/chem_dose_text"
        app:layout_constraintLeft_toRightOf="@id/chem_flow_text"
        app:layout_constraintRight_toLeftOf="@id/cf_mgL_text"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/cf_mgL_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:text="@string/ml_s"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/chem_dose_text"
        app:layout_constraintLeft_toRightOf="@id/chem_flow_display"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>