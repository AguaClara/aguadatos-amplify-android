<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6F0FF"
        android:padding="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Graph Selection Buttons -->
        <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

            <!-- First Row -->
            <Button
                    android:id="@+id/btnPF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="PLANT FLOW"
                    android:background="@drawable/button_white_to_blue"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            <Button
                    android:id="@+id/btnRWT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="RAW WATER"
                    android:background="@drawable/button_white_to_blue"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            <Button
                    android:id="@+id/btnCoD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="COAG. DOSE"
                    android:background="@drawable/button_white_to_blue"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            <!-- Second Row -->
            <Button
                    android:id="@+id/btnChD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="CHLORINE DOSE"
                    android:background="@drawable/button_white_to_blue"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            <Button
                    android:id="@+id/btnFWT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="FILTER TURBID."
                    android:background="@drawable/button_white_to_blue"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_margin="4dp" />

            <Button
                    android:id="@+id/btnCWT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="CLARIFIED TURBID."
                    android:background="@drawable/button_white_to_blue"
                    android:textColor="#000000"
                    android:padding="8dp"
                    android:layout_margin="4dp" />
        </GridLayout>

        <!-- Placeholder for Multiple Graphs Display -->
        <LinearLayout
                android:id="@+id/graphContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Dynamically added graphs will be placed here -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>