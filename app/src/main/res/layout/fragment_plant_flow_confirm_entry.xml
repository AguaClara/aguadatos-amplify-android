<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="@color/background_blue"
    android:layout_marginBottom="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plant_flow_title"
        android:text="@string/plant_flow_caps"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/entry_box" />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/entry_box"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/plant_flow_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/plant_flow_confirm_button">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/confirm_text_x_container"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/date_text">

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:id="@+id/confirm_entry_text"
                        android:layout_marginHorizontal="25dp"
                        android:paddingVertical="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/please_confirm_your_entry"
                        android:textSize="22sp" />
                <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/x"
                        android:background="@null"
                        android:layout_margin="10dp"
                        android:id="@+id/plant_flow_x_button"
                        android:textSize="20sp" />
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_text"
                    android:paddingVertical="5dp"
                    android:text="@string/date_default"
                    android:textSize="15sp"
                    android:layout_marginHorizontal="25dp"
                    app:layout_constraintTop_toBottomOf="@id/confirm_text_x_container"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/chem_type_text" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/chem_type_text"
                    android:text="@string/chemical_type_pac"
                    android:layout_marginHorizontal="25dp"
                    android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@id/date_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/inflow_rate_header" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inflow_rate_header"
                    android:text="@string/inflow_rate"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:paddingVertical="15dp"
                    app:layout_constraintTop_toBottomOf="@id/chem_type_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/inflow_rate_text" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inflow_rate_text"
                    android:textStyle="bold"
                    android:text="@string/_l_s"
                    android:gravity="center_horizontal"
                    android:paddingVertical="5dp"
                    android:textSize="15sp"
                    android:paddingHorizontal="70dp"
                    app:layout_constraintTop_toBottomOf="@id/inflow_rate_header"
                    app:layout_constraintBottom_toTopOf="@id/notes_header"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/notes_header"
                    android:text="@string/notes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginVertical="15dp"
                    app:layout_constraintTop_toBottomOf="@id/inflow_rate_text"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/plant_flow_notes_text" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/plant_flow_notes_text"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="@string/__"
                    android:gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    app:layout_constraintTop_toBottomOf="@id/notes_header"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:id="@+id/plant_flow_confirm_button"
            android:background="@drawable/green_button_background"
            android:text="@string/confirm_submission"
            android:layout_marginVertical="20dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/entry_box"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>