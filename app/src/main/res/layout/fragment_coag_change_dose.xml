<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coagulant_form_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp" >
        <TextView
            android:id="@+id/input_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/chem_flow_text2"
            />
        <View
            android:id="@+id/input_underline"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/input_display"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/chem_flow_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chemical_flow_rate"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/input_display"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/chem_dose_text2"
            app:layout_constraintBottom_toTopOf="@id/chem_flow_display2" />
        <TextView
            android:id="@+id/chem_dose_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chemical_dose"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/input_display"
            app:layout_constraintLeft_toRightOf="@id/chem_flow_text2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/chem_flow_display2" />
        <TextView
            android:id="@+id/chem_flow_display2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/rounded_white2"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/chem_flow_text2"
            app:layout_constraintBottom_toTopOf="@id/slider_position_text2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sv_mls_text" />
        <TextView
            android:id="@+id/sv_mls_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mL/s"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintLeft_toRightOf="@id/chem_flow_display2"
            app:layout_constraintTop_toBottomOf="@id/chem_flow_text2"
            app:layout_constraintRight_toLeftOf="@id/chem_dose_display2"
            app:layout_constraintBottom_toTopOf="@id/slider_position_text2" />
        <TextView
            android:id="@+id/chem_dose_display2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/rounded_white2"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/chem_flow_text2"
            app:layout_constraintBottom_toTopOf="@id/slider_position_text2"
            app:layout_constraintLeft_toRightOf="@id/sv_mls_text"
            app:layout_constraintRight_toLeftOf="@id/ev_mls_text"/>
        <TextView
            android:id="@+id/ev_mls_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mL/s"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/chem_dose_display2"
            app:layout_constraintTop_toBottomOf="@id/chem_flow_text2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slider_position_text2" />
        <TextView
            android:id="@+id/slider_position_text2"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="@string/slider_position_over_dose"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/chem_flow_display2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slider_seek_bar2" />
        <SeekBar
            android:id="@+id/slider_seek_bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/gray_seekbar_thumb"
            android:progress="50"
            android:splitTrack="false"
            android:progressDrawable="@drawable/gray_seekbar_progress_background"
            app:layout_constraintTop_toBottomOf="@id/slider_position_text2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slider_labels_02"
            />
        <TextView
            android:id="@+id/slider_labels_02"
            android:layout_width="0dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0%"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/slider_labels_502"
            app:layout_constraintBottom_toTopOf="@id/target_chem_dose_text" />
        <TextView
            android:id="@+id/slider_labels_502"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="50%"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar2"
            app:layout_constraintLeft_toRightOf="@id/slider_labels_02"
            app:layout_constraintRight_toLeftOf="@id/slider_labels_1002"
            app:layout_constraintBottom_toTopOf="@id/target_chem_dose_text" />
        <TextView
            android:id="@+id/slider_labels_1002"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100%"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/target_chem_dose_text" />
        <TextView
            android:id="@+id/target_chem_dose_text"
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:text="@string/target_chemical_dose"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/slider_labels_02"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/target_chem_dose_input" />
        <EditText
            android:id="@+id/target_chem_dose_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/rounded_white2"
            app:layout_constraintTop_toBottomOf="@id/target_chem_dose_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mgl_text"
            app:layout_constraintBottom_toTopOf="@id/output_text" />
        <TextView
            android:id="@+id/mgl_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="mg/L"
            android:layout_marginHorizontal="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/target_chem_dose_text"
            app:layout_constraintLeft_toRightOf="@id/target_chem_dose_input"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/output_text" />
        <TextView
            android:id="@+id/output_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/output_text_label"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/target_chem_dose_input"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/new_slider_text" />
        <View
            android:id="@+id/output_underline"
            android:layout_width="65dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/output_text"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/new_slider_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_slider_position"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/output_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slider_seek_bar3" />
        <SeekBar
            android:id="@+id/slider_seek_bar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/gray_seekbar_thumb"
            android:progress="50"
            android:splitTrack="false"
            android:progressDrawable="@drawable/gray_seekbar_progress_background"
            app:layout_constraintTop_toBottomOf="@id/new_slider_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/slider_labels_03"
            />
        <TextView
            android:id="@+id/slider_labels_03"
            android:layout_width="0dp"
            android:paddingHorizontal="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0%"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/slider_labels_503"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/slider_labels_503"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="50%"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar3"
            app:layout_constraintLeft_toRightOf="@id/slider_labels_03"
            app:layout_constraintRight_toLeftOf="@id/slider_labels_1003"
            app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:id="@+id/slider_labels_1003"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="100%"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/slider_seek_bar3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>